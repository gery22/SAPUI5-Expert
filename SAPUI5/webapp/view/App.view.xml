<mvc:View controllerName="gerydtp.SAPUI5.controller.App"
          xmlns="sap.m" 
          xmlns:mvc="sap.ui.core.mvc" 
          displayBlock="true">
    <Shell>      
       <App>
          <pages>
              <Page title="{i18n>appTitle} HOLA">
              <headerContent>
                     <Button id="helloDialogHeader"
                             icon="sap-icon://physical-activity"
                             press=".onOpenDialogHeader"
                             class="sapUiSmallMarginEnd"
                             text="Reused"/>
              </headerContent>
                     <content>
                            <mvc:XMLView viewName="gerydtp.SAPUI5.view.HelloPanel"/>
                            <mvc:XMLView viewName="gerydtp.SAPUI5.view.InvoicesList"/>
                     </content>
              </Page>
              </pages>
       </App>
    </Shell>
</mvc:View>
